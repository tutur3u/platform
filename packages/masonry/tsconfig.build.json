{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "examples",
    "src/test-setup.ts"
  ]
}

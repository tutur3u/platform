{
  "name": "@tuturuuu/types",
  "license": "MIT",
  "version": "0.2.3",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --project tsconfig.build.json --watch --incremental",
    "type-check": "tsc --project tsconfig.build.json --noEmit",
    "clean": "rm -rf dist .turbo",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "dependencies": {
    "@tiptap/react": "^3.13.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tuturuuu/typescript-config": "workspace:*",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk.d.ts",
      "import": "./dist/sdk.js",
      "require": "./dist/sdk.js"
    },
    "./primitives/*": {
      "types": "./dist/primitives/*.d.ts",
      "import": "./dist/primitives/*.js",
      "require": "./dist/primitives/*.js"
    },
    "./tiptap": {
      "types": "./dist/tiptap.d.ts",
      "import": "./dist/tiptap.js",
      "require": "./dist/tiptap.js"
    }
  },
  "packageManager": "bun@1.3.3"
}

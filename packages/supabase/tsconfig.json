{
  "extends": "@tuturuuu/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}

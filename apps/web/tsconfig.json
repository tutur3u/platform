{
  "extends": "@tuturuuu/typescript-config/nextjs.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": ["@serwist/next/typings"],
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@tuturuuu/types/*": ["../../packages/types/src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    ".next/types/**/*.ts",
    "src/app/sw.ts",
    "global.d.ts",
    "messages"
  ],
  "exclude": ["node_modules", "dist", ".turbo", "public/sw.js"]
}

{
  "extends": "@tuturuuu/typescript-config/nextjs.json",
  "compilerOptions": {
    "module": "ESNext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", ".next/types/**/*.ts", "global.d.ts", "messages"],
  "exclude": ["node_modules", "dist", ".turbo"]
}
